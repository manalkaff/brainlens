# HTTPS configuration with automatic TLS
brainlens.cloud {
    # Serve static frontend files
    root * /srv/client
    encode gzip
    try_files {path} /index.html
    file_server
    
    # Handle API routes
    handle /api/* {
        reverse_proxy app:3001
    }
    
    # Handle auth routes  
    handle /auth/* {
        reverse_proxy app:3001
    }
}

# If you want separate subdomains (optional)
# api.brainlens.example.com {
#     reverse_proxy app:3001 {
#         health_uri /health
#         health_interval 30s
#         health_timeout 10s
