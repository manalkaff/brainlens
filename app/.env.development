# Development Environment Variables for BrainLens
# Copy this to .env.server and update with your actual values

# Environment
NODE_ENV=development

# Database (use Docker PostgreSQL for development)
DATABASE_URL=postgresql://postgres:dev_password_change_in_production@localhost:5432/brainlens_dev

# Vector Database (use Docker Qdrant for development)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# Search Engine (use Docker SearXNG for development)
SEARXNG_URL=http://localhost:8080

# Cache (use Docker Redis for development)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# OpenAI API (required for embeddings and content generation)
OPENAI_API_KEY=your_openai_api_key_here

# Wasp Authentication & Features
# For testing, go to https://dashboard.stripe.com/test/apikeys
STRIPE_API_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_CUSTOMER_PORTAL_URL=https://billing.stripe.com/...

# Lemon Squeezy (alternative payment processor)
LEMONSQUEEZY_API_KEY=eyJ...
LEMONSQUEEZY_STORE_ID=012345
LEMONSQUEEZY_WEBHOOK_SECRET=my-webhook-secret

EMAIL_FROM=noreply@brainlens.cloud
SMTP_HOST=smtp.resend.com
SMTP_PORT=465
SMTP_USERNAME=resend
SMTP_PASSWORD=resend_api_key_here

# Payment Plans (create these in your payment provider)
PAYMENTS_HOBBY_SUBSCRIPTION_PLAN_ID=012345
PAYMENTS_PRO_SUBSCRIPTION_PLAN_ID=012345
PAYMENTS_CREDITS_10_PLAN_ID=012345

# Admin Users (comma-separated list of emails)
ADMIN_EMAILS=admin@brainlens.dev,you@example.com

# Google Authentication (optional)
GOOGLE_CLIENT_ID=722...
GOOGLE_CLIENT_SECRET=GOC...

# SendGrid for emails
SENDGRID_API_KEY=SG...

# Analytics (optional)
PLAUSIBLE_API_KEY=gUTgtB...
PLAUSIBLE_SITE_ID=localhost:3000
PLAUSIBLE_BASE_URL=https://plausible.io/api

GOOGLE_ANALYTICS_CLIENT_EMAIL=email@example.gserviceaccount.com
GOOGLE_ANALYTICS_PRIVATE_KEY=LS02...
GOOGLE_ANALYTICS_PROPERTY_ID=123456789

# AWS S3 (for file uploads)
AWS_S3_IAM_ACCESS_KEY=ACK...
AWS_S3_IAM_SECRET_KEY=t+33a...
AWS_S3_FILES_BUCKET=your-bucket-name
AWS_S3_REGION=us-east-1