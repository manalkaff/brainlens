# Production Environment Configuration
# Copy this file to .env.server and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Database (using docker service name)
DATABASE_URL=postgresql://postgres:your_secure_db_password@postgres:5432/learning_platform
DB_USER=postgres
DB_PASSWORD=your_secure_db_password

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
# Redis Cache (using docker service name)
REDIS_URL=redis://:your_secure_redis_password@redis:6379
REDIS_PASSWORD=your_secure_redis_password

# =============================================================================
# VECTOR DATABASE CONFIGURATION
# =============================================================================
# Qdrant Vector Database (using docker service name)
QDRANT_URL=http://qdrant:6333

# =============================================================================
# SEARCH ENGINE CONFIGURATION
# =============================================================================
# SearXNG Meta Search Engine (using docker service name)
SEARXNG_URL=http://searxng:8080
SEARXNG_BASE_URL=https://yourdomain.com/search/

# =============================================================================
# AI/ML CONFIGURATION
# =============================================================================
# OpenAI API Configuration
OPENAI_API_KEY=sk-your_openai_api_key_here

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Application Settings
NODE_ENV=production
PORT=3001

# JWT Secret for authentication (generate a secure random string)
JWT_SECRET=your_super_secure_jwt_secret_256_bits_minimum

# =============================================================================
# STRIPE PAYMENT CONFIGURATION
# =============================================================================
# Stripe API Keys
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# =============================================================================
# LEMON SQUEEZY PAYMENT CONFIGURATION
# =============================================================================
# Lemon Squeezy API Keys
LEMONSQUEEZY_API_KEY=your_lemonsqueezy_api_key
LEMONSQUEEZY_WEBHOOK_SECRET=your_lemonsqueezy_webhook_secret
LEMONSQUEEZY_STORE_ID=your_store_id

# =============================================================================
# GOOGLE OAUTH CONFIGURATION
# =============================================================================
# Google OAuth for social login
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# Email Service (for notifications, password resets, etc.)
EMAIL_FROM=noreply@yourdomain.com
SMTP_HOST=smtp.resend.com
SMTP_PORT=465
SMTP_USERNAME=resend
SMTP_PASSWORD=re_SMkkzmzp_3VnpQXuWAtNV5rbhCaMYsDw3

# =============================================================================
# DOMAIN CONFIGURATION
# =============================================================================
# Your production domain
WASP_WEB_CLIENT_URL=https://yourdomain.com
WASP_SERVER_URL=https://yourdomain.com

# =============================================================================
# FILE STORAGE CONFIGURATION
# =============================================================================
# AWS S3 Configuration for file uploads
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-production-bucket

# =============================================================================
# LOGGING AND MONITORING
# =============================================================================
# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# Sentry for error tracking (optional)
SENTRY_DSN=your_sentry_dsn_here

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# CORS Origins (comma-separated list)
CORS_ORIGINS=https://yourdomain.com

# Rate limiting
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_WINDOW_MS=900000

# =============================================================================
# ADDITIONAL SERVICES
# =============================================================================
# Analytics/Tracking (optional)
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX