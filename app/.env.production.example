# Production Environment Configuration
# Copy this file to .env.production and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION (EXTERNAL/HOSTED)
# =============================================================================
# PostgreSQL Database - Replace with your hosted database URL
DATABASE_URL=postgresql://username:password@your-hosted-database.com:5432/brainlens

# =============================================================================
# EXTERNAL SERVICES CONFIGURATION (HOSTED ELSEWHERE)
# =============================================================================
# Redis Cache - Replace with your hosted Redis instance
REDIS_URL=redis://your-hosted-redis:6379
REDIS_HOST=your-hosted-redis-instance.com
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# Qdrant Vector Database - Replace with your hosted Qdrant instance
QDRANT_URL=https://your-hosted-qdrant-instance.com:6333

# SearXNG Meta Search Engine - Replace with your hosted SearXNG instance
SEARXNG_URL=https://your-hosted-searxng-instance.com
SEARXNG_BASE_URL=https://your-hosted-searxng-instance.com

# =============================================================================
# AI/ML CONFIGURATION
# =============================================================================
# OpenAI API Configuration
OPENAI_API_KEY=sk-your_openai_api_key_here

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Application Settings
NODE_ENV=production
PORT=3001

# JWT Secret for authentication (generate a secure random string)
JWT_SECRET=your_super_secure_jwt_secret_256_bits_minimum

# =============================================================================
# STRIPE PAYMENT CONFIGURATION (PLACEHOLDER VALUES - NOT FOR PRODUCTION USE)
# =============================================================================
# Stripe API Keys - Using dummy values to prevent initialization errors
# Replace with real values when you're ready to use Stripe payments
STRIPE_PUBLISHABLE_KEY=pk_test_dummy_key_for_development_only
STRIPE_SECRET_KEY=sk_test_dummy_key_for_development_only
STRIPE_API_KEY=sk_test_dummy_api_key_for_development_only
STRIPE_WEBHOOK_SECRET=whsec_dummy_webhook_secret_for_development_only
STRIPE_CUSTOMER_PORTAL_URL=https://billing.stripe.com/dummy_portal_url

# =============================================================================
# LEMON SQUEEZY PAYMENT CONFIGURATION
# =============================================================================
# Lemon Squeezy API Keys
LEMONSQUEEZY_API_KEY=your_lemonsqueezy_api_key
LEMONSQUEEZY_WEBHOOK_SECRET=your_lemonsqueezy_webhook_secret
LEMONSQUEEZY_STORE_ID=your_store_id

# =============================================================================
# GOOGLE OAUTH CONFIGURATION
# =============================================================================
# Google OAuth for social login
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# Email Service (for notifications, password resets, etc.)
EMAIL_FROM=noreply@brainlens.cloud
SMTP_HOST=smtp.resend.com
SMTP_PORT=465
SMTP_USERNAME=resend
SMTP_PASSWORD=de

# =============================================================================
# DOMAIN CONFIGURATION
# =============================================================================
# Your production domain - Update with your actual domain
WASP_WEB_CLIENT_URL=https://brainlens.example.com
WASP_SERVER_URL=https://brainlens.example.com

# =============================================================================
# FILE STORAGE CONFIGURATION
# =============================================================================
# AWS S3 Configuration for file uploads
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-production-bucket

# =============================================================================
# LOGGING AND MONITORING
# =============================================================================
# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# Sentry for error tracking (optional)
SENTRY_DSN=your_sentry_dsn_here

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# CORS Origins (comma-separated list)
CORS_ORIGINS=https://yourdomain.com

# Rate limiting
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_WINDOW_MS=900000

# =============================================================================
# ADDITIONAL SERVICES
# =============================================================================
# Analytics/Tracking (optional)
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX